# MISC

# screenshots
alt + ctrl + 3
	maim -u | xclip -selection clipboard -t image/png && notify-send "Screenshot captured"
alt + ctrl + 4
	maim -s -u | xclip -selection clipboard -t image/png && notify-send "Screenshot captured"

# screencasts 
alt + ctrl + 5 
	mpv $HOME/.local/share/sounds/beep-timber.aif && dunstify -u CRIT "on air" -t 800 && ffmpeg -f x11grab -s 1920x1080 -i :0.0 $HOME/Videos/Screencasts/$(date +"%d_%m_%Y_%I_%M").mp4 
alt + ctrl + 6 
	mpv $HOME/.local/share/sounds/beep-timber.aif && pkill ffmpeg && dunstify -u LOW "screencast saved"

# switch between monitors
F12
	exec $HOME/.switchoutputs

# media keys
XF86AudioRaiseVolume 
	$HOME/.mmkeys.sh up
XF86AudioLowerVolume 
	$HOME/.mmkeys.sh down
XF86AudioMute 
	$HOME/.mmkeys.sh mute
F6 
	$HOME/.mmkeys.sh prev
F7 
	$HOME/.mmkeys.sh pause
F8 
	$HOME/.mmkeys.sh next

# applications
alt + Return
	st
alt + d
	dmenu-frecency
alt + b
	qutebrowser
alt + m
	udiskie-dmenu -h 24

# lock screen
alt + shift + ctrl + l
	xautolock -locknow

# make sxhkd reload its configuration files:
alt + shift + r
	pkill -USR1 -x sxhkd && $HOME/.config/bspwm/bspwmrc


# BSPWM

# close and kill
alt + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
alt + f
	bspc desktop -l next

# rotate current node 90 degrees
alt + y
	bspc node @focused:/ -R 90

# swap the current node and the biggest local node
alt + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
alt + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}


# focus/swap

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
alt + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus or swap the next node
alt + {_,shift + }c
	bspc node -{f,s} next.local

# focus the older or newer node in the focus history

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

#
# preselect
#

# preselect the direction
alt + {u,o}
	bspc node -p {south,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
alt + control + {h,j,k,l}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# contract a window by moving one of its side inward

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
